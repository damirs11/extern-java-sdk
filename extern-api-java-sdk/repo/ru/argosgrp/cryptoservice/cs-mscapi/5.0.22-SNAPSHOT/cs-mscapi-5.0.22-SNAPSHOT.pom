<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>


    <parent>
        <groupId>ru.argosgrp.cryptoservice</groupId>
        <artifactId>cryptoservice</artifactId>
        <version>5.0.22-SNAPSHOT</version>
    </parent>

    <!--groupId>ru.argosgrp.cryptoservice</groupId-->
    <artifactId>cs-mscapi</artifactId>

    <properties>
        <SpecificationTitle>Argos MS CAPI 2.0 service Module</SpecificationTitle>
        <ImplementationVersion>${applicationVersion}</ImplementationVersion>
        <jni-mscapi32>${project.basedir}/src/native/build32/release</jni-mscapi32>
        <jni-mscapi64>${project.basedir}/src/native/build64/release</jni-mscapi64>
        <maven.test.skip>true</maven.test.skip>
        <!--jni-mscapi32>${project.basedir}/src/native/build32/debug</jni-mscapi32>
        <jni-mscapi64>${project.basedir}/src/native/build64/debug</jni-mscapi64-->
    </properties>

    <packaging>jar</packaging>

    <repositories>
        
    </repositories>

    <distributionManagement>
        
    </distributionManagement>

    <dependencies>

        <dependency>
            <groupId>ru.argosgrp.cryptoservice</groupId>
            <artifactId>cs</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <id>jni-mscapi32.dll</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.basedir}/target/classes/ru/argosgrp/cryptoservice/mscapi/nativeLib32</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${jni-mscapi32}</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>*.dll</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>jni-mscapi64.dll</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.basedir}/target/classes/ru/argosgrp/cryptoservice/mscapi/nativeLib64</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${jni-mscapi64}</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>*.dll</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
